<!DOCTYPE html>
<html>
    <head>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        
        <script>
        $(document).ready(function(){
         $('.tabs').tabs();
         });
        $(document).on("click",".myCareer",function(){
        $(".careerRender").toggle();
        });
        $(document).on("click",".myAssembly",function(){
          $(".assemblyRender").toggle();
        });
        $(document).on("click",".myScrap",function(){
          $(".scrapRender").toggle();
        });
        $(document).on("click",".myDonate",function(){
          $(".donateRender").toggle();
        });
        
        </script>

   
    </head>
    <body>
       
      <div class="container">
       
        <div class="content">
                 
                   <ul class="collection">
                        <img src="<%= @user.profile%>" class= "pro-circle"/>
                        
                        <li class="collection-header">
                        <h4><%= @user.name %> <%= @user.email %>     </h4></li>
                        
                         <span class="title"> </span>
                         </li>
                         
                        <li class="collection-item avatar">
                          <i class="large material-icons circle" > whatshot </i>
                          <span class="title"> 매칭 여부 </span>
                           <p> <strong><%= @user.matching %></strong></p>

                        </li>
                        
                        <li class="collection-item avatar">
                          <i class="large material-icons circle" > whatshot </i>
                          <span class="title"> 관심사 </span>
                     
                            <p>#
                        <% if @category.politic == true %>
                        정치
                        <% end %>
                        <% if @category.society == true %>
                        사회
                        <% end %>
                        <% if @category.education == true %>
                        교육
                        <% end %>
                        <% if @category.labor == true %>
                        노동
                        <% end %>
                        <% if @category.foodMedi == true %>
                        식품/의료
                        <% end %>
                        <% if @category.press == true %>
                        언론
                        <% end %>
                        <% if @category.environment == true %>
                        환경
                        <% end %>
                        <% if @category.right == true %>
                        인권
                        <% end %>
                        <% if @category.female == true %>
                        여성
                        <% end %>
            
                       <br>
                        
 <!--능력--> #
                        <% if @ability.plan == true %>
                        기획
                        <% end %>
                        <% if @ability.mc == true %>
                        진행
                        <% end %>
                        <% if @ability.design == true %>
                        디자인
                        <% end %>
                        <% if @ability.video == true %>
                        영상
                        <% end %>
                        <% if @ability.sns == true %>
                        sns
                        <% end %>
                    </p>                                    </p>
                        </li>
                        
                        
                        <li class="collection-item avatar">
                          <i class="large material-icons circle" > whatshot </i>
                          <span class="title"> 소개글 </span>
                          <p>
                          <%= @user.introduce %> <br>
                          <% if @user.id == current_user.id %>
                          <a href="/valueplus/profileEdit/<%= @user.id %>">수정하기</a>
                          <% end %>
                          </p>
                        </li>
                      </ul>
            
               
         </div>
    </div>
            
        <div class="row">
           <div class="col s12">
            <ul class="tabs tabs-fixed-width tab-demo z-depth-1">
              <li class="tab col s3"><a class="active" href="#test3"> 
                경력         
               </a></li>
              <li class="tab col s3"><a href="#test4">스크랩</a></li>
              <li class="tab col s3"><a class="active" href="#test5">올린 시위</a></li>
              <li class="tab col s3"><a href="/#test6">후원현황</a></li>
            </ul>
            </div>
         </div>    
         
             <div class="my-container">     

                 <!--경력 탭-->
                 
                    <div id="test3" class= "col s12">
                      <div class= "career-container">
                        <% if @user.id == current_user.id %>
                       <div class ="myCareer" style="cursor:pointer">
                           <div class="tap-title">
                           <h6 class="tap-title2"> 경력 </h6>
                          </div> 
                       </div>
                       <div class="careerRender"><%= render "myCareer" %></div> 
                       <% end %>

                      </div>
                    </div>   
                                
                    <!--스크랩 탭-->
                        <div id="test4" class= "col s12">
                          <div class= "scrap-container">
                              <% if @user.id == current_user.id %>
                              <div class="myScrap" style="cursor: pointer;">
                               <div class="tap-title"> <h6> 스크랩내역</h6>
                             </div></div>
                              <div class="scrapRender" style="display:none;"><%= render "myScrap" %></div>
                              <% end %>
                          </div>
                        </div>
                        

                    <!--집회 탭-->    
                      <div id="test5"  class= "col s12">
                        <div class="assembly-container">
                                 <% if @user.id == current_user.id %>
                                   <div class="assemblyRender" style="display:none;"><%= render "myAssembly" %></div>
                                   <div class="myScrap" style="cursor: pointer;">
                                      <div class="tap-title">
                                   <h6 class="tap-title2">올린 집회</h6>
                                       </div> 
                                   </div>
                                 <% end %>
                        </div> 
                      </div>  
                     
                    <!--후원 탭-->
                      <div id="test6"  class= "col s12">
                       <div class= "donate-container">
                              <% if @user.id == current_user.id %>
                              <div class="myDonate" style="cursor: pointer;">
                                  <div class="tap-title">
                                   <h6 class="tap-title2"> 후원 내역</h6>
                              </div> 
                              <div class="donateRender" style="display:none;"><%= render "myDonate" %></div>
                              <% end %>
                        
                           </div>
                        </div>
      </div>

            
    </body>
   
</html> 


<!DOCTYPE html>
<html>
    <head>
        <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=db925d80037ce21156d8b3cec54a8504"></script>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </head>
    
    <body>
        <!-- AssemblyTitle 집회 타이틀 -->
        <div class="container AssemblyTitle">
            <br><br>
            <div class="center">
                <button class="btn red" style=""><%= @assemblyCategory%></button>
                <h2 class="show-title"><%= @assembly.title%></h2>
                <h5><%= @assembly.host.name %></h5>
            </div>
            <div class='row' style="margin:0 auto;">
                <div class="col s6" style="text-align:right">
                    <strong>Like:</strong>
                    <%=@assembly.likes.size%>
                    <% if current_user.is_like? (@assembly) %>
                        <form action='/assembly/<%= @assembly.id%>/like' method='post'>
                            <button class="btn-floating btn-small btn-red waves-effect red"><i class="material-icons">favorite</i></button> 
                        </form>
                    <% else %>
                        <form action='/assembly/<%= @assembly.id%>/like' method='post'>
                            <button class="btn-floating btn-small waves-effect red"><i class="material-icons">favorite</i></button> 
                        </form>
                    <% end %>
                </div>
                <div class="col s6" style="text-align:left">
                    <strong>Scrap:</strong>
                    <%=@assembly.scraps.size%>
                    <% if current_user.is_scrap? (@assembly) %>
                        <form action='/assembly/<%= @assembly.id%>/scrap' method='post'>
                            <button class="btn-floating btn-small btn-red waves-effect yellow"><i class="material-icons">grade</i></button> 
                        </form>
                    <% else %>
                        <form action='/assembly/<%= @assembly.id%>/scrap' method='post'>
                            <button class="btn-floating btn-small waves-effect yellow"><i class="material-icons">grade</i></button> 
                        </form>
                    <% end %>
                </div>
            </div>
        </div>
        <br><br><br>





        <!--AssemblyIntroduction 시위 소개-->
        <div class="container AssemblyContent row">
            <div class="col s8 left">
                <div>
                    <p><img src="<%= @assembly.thumbnail.url %>" alt="thumbnail" height="100%" width="100%"></p>
                </div>
            </div>
            
            <div class="col s4 right show-introduction"><br>
                
                <hr class="show-hr">
                
                <p class="show-introduction title">날짜</p>
                    <h5 class="show-detail"><%= @assembly.calendar%></h5>
                <p class="show-introduction title">위치</p>
                    <h5 class="show-detail"><%= @assembly.roadAddress %></h5>
                <p class="show-introduction title">후원 마감</p>
                    <h5 class="show-detail"><%= @assembly.donateDeadline %></h5>
                <p class="show-introduction title">후원 목표</p>
                    <h5 class="show-detail"><%= @assembly.donateGoal %></h5>
                <p class="show-introduction title">현재까지 후원 금액</p>
                    <h5 class="show-detail"><%= @donateMoney %></h5>
                    
                    <br><br>
                    
                <a href ="/valueplus/donate_view/<%= @assembly.id %>" class="col s12 btn-large red rounded">후원하러 가기</a>
            </div>
        </div>
        <br><br>
        
        <!--AssemblyContent 시위 설명 및 주최자 정보 및 위치지도-->
        <div class="container AssemblyContent row">
            <div class="col s8 left">
                <div>
                    <p><img src="<%= @assembly.poster.url %>" alt="poster" height="100%" width="100%"></p>
                </div>
                <div><br><br>
                    <h5><b>시위 목적</b></h5><%= @assembly.purpose%><br><br>
                    <h5><b>시위 날짜</b></h5><%= @assembly.calendar%><br><br>
                    <h5><b>시위 위치</b></h5><%= @assembly.roadAddress %><br><br>
                    <h5><b>시위 내용</b></h5><%= @assembly.content%><br><br>
                </div>
            </div>
            <div class="col s4 right" style="padding-left: 20px;">
                <div class="card-panel grey lighten-5 z-depth-1">
                  <div class="row valign-wrapper">
                    <div class="col s4">
                      <img src="http://dimg.donga.com/wps/NEWS/IMAGE/2018/01/04/88025384.1.jpg" height="100" width="100" class="circle responsive-img">  
                    </div>
                    <div class="col s8">
                        <span class="black-text">
                          <h6><%= @assembly.host.name %></h6>
                          <strong><%= @assembly.host.email %></strong>
                        </span>
                    </div>
                  </div>
                  <div ><%= @assembly.host.intro %></div>
                </div>
              </div>
            </div>
        </div>        
        <br><br>
    
        <!--AssemblyMap 지도-->
        <div class="container AssemblyMap row">
            <div id="map" style="width:100%;height:100%;"></div>
        </div>
        

        
        <!--관리자만 보이는 페이지-->
            <% if current_user.admin== true %> 
            <div class="container">
                <p><img src="<%= @assembly.report.url %>" alt="report" height="100%" width="100%"></p>
            </div>
            <div class="container">
                <div style="float:left">
                    <a href="/valueplus/edit/<%= @assembly.id %>"  class="btn-large rounded">게시물 수정</a>
                    <a href="/valueplus/destroy/<%= @assembly.id %>" class="btn-large rounded">게시물 삭제</a>
                </div>
                <div style="float:right">
                    <a href="/valueplus/check_yes/<%= @assembly.id %>" class="btn-large rounded red">게시물 승인</a>
                    <a href="/valueplus/check_no/<%= @assembly.id %>"  class="btn-large rounded red">게시물 거부</a>
                </div>
            </div>
          <% end %> 
          <br><br><br>
        </div>
    </body>
    
    <script>
            var fullAddress = "<%= @assembly.roadAddress %>";
            var mapContainer = document.getElementById('map'), // 지도를 표시할 div 
                mapOption = {
                    center: new daum.maps.LatLng(33.450701, 126.570667), // 지도의 중심좌표
                    level: 3 // 지도의 확대 레벨
                };  
            // 지도를 생성합니다    
            var map = new daum.maps.Map(mapContainer, mapOption); 
            // 주소-좌표 변환 객체를 생성합니다
            var geocoder = new daum.maps.services.Geocoder();
            // 주소로 좌표를 검색합니다
            geocoder.addressSearch(fullAddress, function(result, status) {
                // 정상적으로 검색이 완료됐으면 
                 if (status === daum.maps.services.Status.OK) {
                    var coords = new daum.maps.LatLng(result[0].y, result[0].x);
                    // 결과값으로 받은 위치를 마커로 표시합니다
                    var marker = new daum.maps.Marker({
                        map: map,
                        position: coords
                    });
                    // 지도의 중심을 결과값으로 받은 위치로 이동시킵니다
                    map.setCenter(coords);
                } 
            });    
    </script>
</html>